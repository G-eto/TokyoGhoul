<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/bg_round_click"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/margin_s"
    android:orientation="vertical">

    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/img_port_account"
        android:layout_width="@dimen/img_width"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_share"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_margin="@dimen/margin_s"/>
    <TextView
        android:id="@+id/port_account"
        android:layout_width="@dimen/item_width_2"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_port_account"
        android:layout_marginLeft="@dimen/margin_s"
        android:text="应用宝QQ"
        />
    <TextView
        android:id="@+id/role_account"
        android:layout_width="@dimen/item_width_2"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/port_account"
        android:layout_margin="@dimen/margin_s"
        android:text="焰灵姬"/>
    <LinearLayout
        android:layout_toRightOf="@id/role_account"
        android:layout_margin="@dimen/margin_s"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/number_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1102"/>
        <TextView
            android:id="@+id/password_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1opp"/>
    </LinearLayout>

</RelativeLayout>